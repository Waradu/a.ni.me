{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "a.ni.me",
  "version": "0.8.0",
  "identifier": "dev.waradu.a.ni.me",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run generate"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "A • NI • ME",
        "width": 600,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "minHeight": 600,
        "minWidth": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZEMDE5NTZCNjc4NUMyQTIKUldTaXdvVm5hNVVCL1hxaGkzMEEyWW9QSkgwOWd3MEZUOHFkaWNINUptOUNOdmhYcVdVaXFEblcK",
      "endpoints": ["https://a.ni.me.waradu.dev/api/latest"]
    },
    "deep-link": {
      "desktop": {
        "schemes": ["a.ni.me"]
      }
    }
  }
}
