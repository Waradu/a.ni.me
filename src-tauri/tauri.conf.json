{
  "productName": "a.ni.me",
  "version": "0.5.0",
  "identifier": "dev.waradu.a.ni.me",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run nuxt dev",
    "beforeBuildCommand": "bun run generate"
  },
  "app": {
    "windows": [
      {
        "title": "A•NI•ME",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "minHeight": 500,
        "minWidth": 700,
        "windowEffects": {
          "effects": [
            "micaDark"
          ]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:a.ni.me.db"
      ]
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEZEMDE5NTZCNjc4NUMyQTIKUldTaXdvVm5hNVVCL1hxaGkzMEEyWW9QSkgwOWd3MEZUOHFkaWNINUptOUNOdmhYcVdVaXFEblcK",
      "endpoints": [
        "https://a.ni.me-backend.waradu.dev/api/latest"
      ]
    }
  }
}